<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    tools:context=".Admin.Edit_Alumni">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="651dp"
        android:layout_gravity="center"
        android:background="@drawable/cardview"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/cancel2"
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:src="@mipmap/cross" />

        <TextView
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="ID TO BE EDITED"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18dp">

        </TextView>


        <EditText
            android:id="@+id/AlumniId"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="NAME OF THE ALUMNI"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18dp">

        </TextView>


        <EditText
            android:id="@+id/NameAlumni"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:textSize="18dp">

        </EditText>

        <TextView
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text="PLACED IN COMPANY"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18dp">

        </TextView>


        <EditText
            android:id="@+id/Placed"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:textSize="18dp">

        </EditText>

        <TextView

            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:text="Email ADDRESS"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18dp">

        </TextView>


        <EditText
            android:id="@+id/EmailofAlumni"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:textSize="18dp">

        </EditText>

        <Button
            android:id="@+id/editSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_btn"
            android:text="SUBMIT">

        </Button>


    </LinearLayout>



</androidx.cardview.widget.CardView>